CRBEHAVE_CFLAGS = @CRBEHAVE_CFLAGS@
CRBEHAVE_LDFLAGS = @CRBEHAVE_LDFLAGS@
PROG = tuples
CFLAGS = $(CRBEHAVE_CFLAGS) -Wall -pedantic -std=c99
LDFLAGS = $(CRBEHAVE_LDFLAGS)

all: $(PROG)

SRCS=tuple.c tuples.c
OBJS=$(SRCS:.c=.o)

$(PROG): $(OBJS)
	$(CC) -o$@ $(OBJS) $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(PROG) $(OBJS)
